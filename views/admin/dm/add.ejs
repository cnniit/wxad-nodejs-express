<%- include ../public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include  ../public/aslideleft.ejs%>
			
          
        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">广告管理
                </li>
                <li class="active">代码列表
                </li>
            </ol>
            <div class="panel panel-default">
              
			    <div class="panel-heading">
                  增加代码
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form" style="    overflow-x: hidden;">
                        <form action="/admin/dm/doAdd" method="post" enctype="multipart/form-data">
                            <ul>
                                <li>  
                                    <div class="form-group ">
                                    <label for="linkname">推广链接</label>
                                    <input type="text" class="form-control" id="linkname" placeholder="请输入名称" name="linkname"  style="width: 33%;">
                                </div>
                                </li>
                                <li> 
                                	<div class="form-group ">
                                        <label for="cnzzdm">CNZZ代码</label>
                                        <p class="text-success">CNZZ代码样例：<strong>&#60;&#115;&#99;&#114;&#105;&#112;&#116;&#32;&#116;&#121;&#112;&#101;&#61;&#34;&#116;&#101;&#120;&#116;&#47;&#106;&#97;&#118;&#97;&#115;&#99;&#114;&#105;&#112;&#116;&#34;&#32;&#115;&#114;&#99;&#61;&#34;&#104;&#116;&#116;&#112;&#115;&#58;&#47;&#47;&#115;&#57;&#46;&#99;&#110;&#122;&#122;&#46;&#99;&#111;&#109;&#47;&#122;&#95;&#115;&#116;&#97;&#116;&#46;&#112;&#104;&#112;&#63;&#105;&#100;&#61;&#49;&#50;&#51;&#52;&#53;&#54;&#55;&#56;&#57;&#48;&#38;&#119;&#101;&#98;&#95;&#105;&#100;&#61;&#49;&#50;&#51;&#52;&#53;&#54;&#55;&#56;&#57;&#48;&#34;&#62;&#60;&#47;&#115;&#99;&#114;&#105;&#112;&#116;&#62;</strong></p>
                                        <textarea class="form-control input-medium" placeholder="请填写CNZZ代码" rows="3"  name="cnzzdm"  style="width: 50%;"></textarea>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-group ">
                                        <p class="text-success">阿里·汇川代码样例：utq('track', '<strong>Search</strong>', '<strong>123456</strong>');</p>
                                        <label class="form-inline">UC统计方式<input type="text" class="form-control " placeholder="请输入UC统计方式" name="utq2"/></label>
                                        <label class="form-inline">UC六位编码<input type="text" class="form-control" placeholder="请输入UC六位编码" name="utq3"/></label>
                                    </div>
                                </li>

                                <li>  
                                    <div class="form-group">
                                        <div class="pretty">
                                            <input type="checkbox"  name="bPCc" onchange="checkboxOnclick(this)" > 
                                            <label><i class="mdi mdi-check"></i> <input type="hidden" name="bPC"/>屏蔽PC端</label>
                                          </div>
                                    </div>                              
                                </li>

                                <li> 
                                	<div class="form-group ">
                                        <label for="byjc">
                                            备用基础代码
                                            </label>
                                        <textarea class="form-control"  placeholder="请输入备用基础代码"  rows="3"  name="byjc" style="width: 50%;"></textarea>
                                    </div>
                                </li>
                                <li> 
                                	<div class="form-group ">
                                        <label for="byzh">备用转化代码</label>
                                        <textarea class="form-control" placeholder="请输入备用转化代码" rows="3"  name="byzh"  style="width: 50%;"></textarea>
                                    </div>
                                </li>
                                
                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
<script>
    var bpcc = document.getElementsByName("bPCc")[0];
    var bpc =  document.getElementsByName("bPC")[0];
    window.onload = function(){
        bpc.value ='0'
    }
  function checkboxOnclick(bpcc){
 
    if ( bpcc.checked == true){
    //Action for checked
    bpc.value = '1'
    }else{
    //Action for not checked
    bpc.value = '0'
    }
  
  }
 
 
    
</script>
</body>
</html>